{
  "name": "securee2e",
  "version": "0.4.2",
  "author": {
    "name": "Daniele Frisanco",
    "url": "https://www.linkedin.com/in/daniele-frisanco-9589835a/"
  },
  "description": "Vue 3 composable for secure End-to-End Encryption (E2E) using Web Crypto API, featuring ECDH and authenticated key exchange with ECDSA.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/securee2e.js",
  "module": "./dist/securee2e.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/securee2e.mjs",
      "require": "./dist/securee2e.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.6.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "fake-indexeddb": "^6.2.3",
    "jsdom": "^27.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "vue": "^3.5.22",
    "vue-tsc": "^3.1.0"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "./vitest.setup.js"
    ],
    "include": [
      "__tests__/**/*.{ts,js}"
    ],
    "coverage": {
      "reporter": [
        "text",
        "json",
        "html"
      ]
    }
  },
  "files": [
    "dist",
    "src/composables/useDiffieHellman.ts",
    "README.md",
    "LICENSE.md"
  ],
  "keywords": [
    "vue",
    "crypto",
    "e2e",
    "diffie-hellman",
    "aes-gcm",
    "ecdsa"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/danielefrisanco/securee2e.git"
  },
  "homepage": "https://github.com/danielefrisanco/securee2e/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/danielefrisanco/securee2e/issues"
  }
}
